<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#303030"
    android:layout_height="match_parent"
    tools:context=".News">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/world"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/logo"
            android:text="News"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="200dp"
        android:background="#D10000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:id="@+id/news"
        android:layout_marginTop="201dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/newsView"
                        android:text="Covid-19 recent updates"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/prothomalo"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="Prothomalo"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/bbc"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="BBC News"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/star"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="The daily Star"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/dhakaT"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="Dhaka Tribune "
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/bdnews24"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="bdnews24"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/jugantor"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="Jugantor"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/ittefaq"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="Ittefaq"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/aljazeera"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="aljazeera"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/covidMap"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="Covid-19 Map"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/IEDCR"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="IEDCR Website"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/course"
        android:layout_marginTop="201dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/courseView"
                        android:text="Covid-19 related free course and competition with certificate"
                        android:gravity="center"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/who"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="World Health Organization"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/muktopaath"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="muktopaath"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/un"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="United Nations"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_marginTop="10dp"
                        android:id="@+id/unicef"
                        android:layout_width="200dp"
                        android:background="#D10000"
                        android:textSize="15dp"
                        android:textColor="#FFFFFF"
                        android:text="Unicef"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9189255863868239/4238302065"
        />




</RelativeLayout>